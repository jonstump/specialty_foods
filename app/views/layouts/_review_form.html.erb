<%= render "layouts/errors", :object => @review %>

<h1>Enter a Review</h1>
<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %>

  <%= f.submit %>
<% end %>

